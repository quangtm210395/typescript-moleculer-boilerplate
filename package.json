{
  "name": "core-applications",
  "version": "1.0.0",
  "description": "Next Solutions Core Application project",
  "scripts": {
    "dev": "node --inspect=0.0.0.0:9227 -r ts-node/register ./node_modules/moleculer/bin/moleculer-runner.js --env --hot --repl --config moleculer.config.ts src/services/*.service.ts",
    "build": "tsc",
    "cli": "moleculer connect NATS",
    "start": "moleculer-runner src/services",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ./"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^10.12.12",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-typescript": "^5.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.1.0",
    "moleculer-repl": "^0.6.2",
    "nodemon": "^2.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "moleculer": "^0.13.0",
    "mongoose": "^5.9.6",
    "nats": "^1.0.1"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
